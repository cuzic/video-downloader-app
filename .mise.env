# mise environment variables
# This file is automatically loaded by mise

# Development
NODE_ENV=development
ELECTRON_IS_DEV=1

# Paths
DB_PATH=./data/video-downloader.db
LOG_PATH=./logs

# FFmpeg (mise will auto-detect if installed)
FFMPEG_PATH=ffmpeg

# Feature flags
ENABLE_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Performance
MAX_MEMORY=4096
UV_THREADPOOL_SIZE=4