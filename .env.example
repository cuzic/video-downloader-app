# Development Environment Variables
NODE_ENV=development
DEV_PORT=3000
ELECTRON_DEV_TOOLS=true

# Database
DB_PATH=./data/video-downloader.db
DB_LOG_LEVEL=info

# FFmpeg
FFMPEG_PATH=/usr/local/bin/ffmpeg

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
# Winston logging configuration
APP_LOG_LEVEL=info  # Options: error, warn, info, debug, verbose
APP_LOG_DIR=./logs  # Directory for log files (defaults to userData/logs in production)
LOG_MAX_SIZE=5242880  # Max size per log file in bytes (5MB)
LOG_MAX_FILES=14  # Number of days to keep log files
LOG_DATE_PATTERN=YYYY-MM-DD  # Date pattern for rotating files

# Security
ENABLE_CSP=true
ALLOW_EXTERNAL_URLS=false

# Download Settings
MAX_CONCURRENT_DOWNLOADS=3
DEFAULT_DOWNLOAD_PATH=~/Downloads
SEGMENT_RETRY_COUNT=3

# API Keys (if needed)
# YOUTUBE_API_KEY=
# VIMEO_ACCESS_TOKEN=