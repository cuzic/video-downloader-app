{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@": ["src"],
      "@main/*": ["src/main/*"],
      "@main": ["src/main"],
      "@renderer/*": ["src/renderer/*"],
      "@renderer": ["src/renderer"],
      "@shared/*": ["src/shared/*"],
      "@shared": ["src/shared"],
      "@preload/*": ["src/preload/*"],
      "@preload": ["src/preload"],
      "@test/*": ["src/test/*"],
      "@test": ["src/test"]
    },
    "types": []
  }
}
